<%- include("./partials/header.ejs")%>
<div class="container mt-5">
  <div class="row">
    <form action="/create" method="post" enctype="multipart/form-data">
      <div class="form-group  mt-2">
        <label for="exampleFormControlInput1">Author Name</label>
        <input
          type="text"
          class="form-control"
          id="authorName"
          name="authorName"
          placeholder="John Doe"
        />
      </div>
      <div class="form-group  mt-2">
        <label for="exampleFormControlInput2">Title</label>
        <input
          type="text"
          class="form-control"
          id="blogTitle"
          name="blogTitle"
          placeholder="How to Cook Pasta?"
        />
      </div>
      <div class="form-group mt-2">
        <label for="exampleFormControlTextarea1">Write Blog</label>
        <textarea
          class="form-control"
          id="blogBody"
          name="blogBody"
          rows="10"
        ></textarea>
      </div>
      <div class="form-group mt-5">
        <label for="exampleFormControlFile1">Example file input</label>
        <input type="file" accept="image/*" id="coverImage"  name="coverImage" />
      </div>
      <button type="submit" class="btn btn-primary">Create</button>
    </form>
  </div>
</div>
<%- include("./partials/footer.ejs")%>
